@model IEnumerable<Blogger.Models.Comment>



@foreach (var item in Model)
{
    <div id="comments">
        <h5><i class="icon-user"></i>&nbsp;reply by <a href="#">@Html.DisplayFor(modelItem => item.Name)</a> on @Html.DisplayFor(modelItem => item.DateTime).</h5>
        <div class="well">
            <p>@Html.DisplayFor(modelItem => item.Comment1)</p>
        </div>
        <a href="#" class="pull-right">reply</a>
    </div>
}

<h2>Leave a Comment</h2>
<form class="form">
    <div class="control-group">
        <label class="control-label" for="inputName">Name</label>
        <div class="controls">
            <input type="text" class="span6" id="inputName">
        </div>
    </div>
    <div class="control-group">
        <label class="control-label" for="inputEmail">Email</label>
        <div class="controls">
            <input type="text" class="span6" id="inputEmail">
        </div>
    </div>

    <div class="control-group">
        <label class="control-label" for="inputComment">Comment</label>
        <div class="controls">
            <textarea class="span6" id="inputComment" rows="6"></textarea>
        </div>
    </div>

    <div class="control-group">
        <div class="controls action">
            <button type="submit" class="btn btn-success">Send</button>
        </div>
    </div>
</form>


