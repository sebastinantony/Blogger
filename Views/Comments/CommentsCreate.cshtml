@model Blogger.Models.Comment
<h2>Leave a Comment</h2>

<h3>@ViewBag.Message</h3>
@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)

    <div class="control-group">
        <label class="control-label" for="inputName">Name</label>
        <div class="controls">
            @Html.TextBoxFor(model => model.Name, new { @class = "span6" })
            @Html.ValidationMessageFor(model => model.Name)
        </div>
    </div>

    <div class="control-group">
        <label class="control-label" for="inputEmail">Email</label>
        <div class="controls">
            <input type="text" class="span6" id="inputEmail">
        </div>
    </div>



    <div class="control-group">
        <label class="control-label" for="inputComment">Comment</label>
        <div class="controls">
            @Html.TextAreaFor(model => model.Comment1, new { @class = "span6", @row = "6" })
            @Html.ValidationMessageFor(model => model.Comment1)
        </div>
    </div>



    <div class="control-group">
        <div class="controls action">
            <input type="submit" value="Send" class="btn btn-success" />
        </div>
    </div>
	
}






