@model IEnumerable<Blogger.Models.Post>

@foreach (var item in Model)
{
        
    <h2>@Html.DisplayFor(modelItem => item.Name)</h2>
        
    <h4>Written on @Html.DisplayFor(modelItem => item.Date).</h4>
        
    <h5>
        <a href="#comments"><i class="icon-comment"></i>&nbsp;@item.Comments.Count() comments</a>
        &nbsp;&nbsp;
    </h5>
        
    <img class="media-object" src="holder.js/800x250" alt="">
        
    <p>@Html.DisplayFor(modelItem => item.Description) </p>
        
    <a href="#" class="btn btn-primary pull-right">read more</a>

    <hr class="soften">
}


